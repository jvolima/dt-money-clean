{
  "compilerOptions": {
    "target": "ES6",
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "rootDir": "src",
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": [
    "src"
  ]
}